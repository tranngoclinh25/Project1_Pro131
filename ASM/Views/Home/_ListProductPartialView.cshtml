@model List<Product>

@if (Model != null && Model.Count() > 0)
{
    <div class="product-item-wrap row">
        @foreach (var item in Model)
        {
            string url = $"/{item.Alias}-{item.ProductId}.html";
            <div class="col-xl-3 col-lg-4 col-sm-6">
                <div class="product-item">
                    <div class="product-img mfp-img-mobile">
                         @if (item.BestSellers == true)
                        {
                            <div class="btn btn-danger z-1 position-absolute"><span>Sale</span></div>

                        }
                        <a href="@url">
                            <img width="200" height="300" class="img-full" src="~/images/products/@item.Img" alt="@item.Title">

                        </a>
                       
                        <div class="product-add-action">

                            <ul>
                               
                                <li>
                                    
                                    <a href="@url">
                                        <i class="pe-7s-cart"></i>
                                    </a>

                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="product-content">
                        <a class="product-name" href="@url">@item.ProductName</a>
                        <div class="price-box pb-1">
                            @if (item.Discount != null)
                            {
                                <b class="text-danger">@item.Discount.Value.ToString("#,##0") VNĐ</b>
                                <br>

                                <small>
                                    <strike>@item.Price.Value.ToString("#,##0") VNĐ</strike>
                                </small>
                            }
                            else
                            {
                                <b class="text-danger">@item.Price.Value.ToString("#,##0") VNĐ</b>
                            }
@*                            <span class="new-price">@item.Price.Value.ToString("#,##0") VNĐ</span>
*@                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
}
